<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgEventoCanc"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            app:srcCompat="@drawable/event" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTituloCanc"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtFechalist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#a7aaaf"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:layout_gravity="left"
                    android:text="fecha" />


                <LinearLayout
                    android:id="@+id/fondoTipoEntrada"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:background="@drawable/style_entradas"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTipoEnt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sin Usar"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:textStyle="bold"
                        android:textColor="#ffa700" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1.5dp"
        android:layout_marginRight="20dp"
        android:background="#0e4b5e"
        android:orientation="horizontal" />
</LinearLayout>
